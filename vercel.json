{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r backend/requirements.txt"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(ws|verify|chatbot|mongodb|health|educational|static)(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
