# Google AI / Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Reddit API Credentials
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TrendScanner/1.0

# Telegram API Credentials (required for Telegram scanning)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_PHONE=your_phone_number_with_country_code  # e.g., +1234567890
TELEGRAM_SESSION_NAME=trend_scanner_session

# Twitter/X API Credentials (required for Twitter scanning using Twikit)
# Use your Twitter account credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_EMAIL=your_twitter_email  # Optional but recommended
TWITTER_PASSWORD=your_twitter_password
TWITTER_COOKIES_FILE=twitter_cookies.json  # File to save session cookies

# Twitter Auto-Discovery Configuration
# Set to True to automatically fetch trending topics from Twitter instead of manual keywords
# When enabled, the scanner will fetch current trending topics and search tweets for them
TWITTER_AUTO_DISCOVER_KEYWORDS=True

# MongoDB Configuration (optional, for storing results)
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=trend_scanner

# Scanner Configuration (optional)
REDDIT_VELOCITY_THRESHOLD=25.0
REDDIT_MIN_SCORE=50
THREADS_VELOCITY_THRESHOLD=10
THREADS_MIN_LIKES=100
TELEGRAM_VELOCITY_THRESHOLD=50
TELEGRAM_MIN_VIEWS=1000
TWITTER_VELOCITY_THRESHOLD=100
TWITTER_MIN_ENGAGEMENT=50
